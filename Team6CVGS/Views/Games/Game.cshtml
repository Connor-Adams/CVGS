@model IEnumerable<Team6CVGS.Models.Game>

@{
    ViewData["Title"] = "TEST";
}

@foreach (var item in Model)
{

<div id="main" style="text-align: center; display:block">
    <h1> @Html.DisplayFor(modelitem => item.EnglishName) </h1>
    <a href="@(Url.ActionLink("AddToCart", "ShoppingCart", new { game = item.Guid }))">Add To Cart</a>
    <br />
    <br />
    <iframe style="text-align: center" width="420" height="315" src="@ViewData["trailer"]"></iframe>
    <h3> @Html.DisplayFor(modelitem => item.EnglishDescription) </h3>
    <br />
    @Html.DisplayFor(modelitem => item.EnglishDetail)
</div>
}
<div class="text-center">
    <h3>Reviews</h3>
</div>
<div class="panel panel-primary">
    <!-- /.box-header -->
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
            <thead>
                <tr>
                    <th>
                        Review
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Date
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Reviews)
                {
                    @if (item.Approved)
                    {
                <tr>
                    <td>
                        @item.ReviewContent
                    </td>
                    <td>
                        @item.ReviewRaiting
                    </td>
                    <td>
                        @item.ReviewDate
                    </td>
                </tr>
                        }
                    }
            </tbody>
        </table>
    </div>
</div>

