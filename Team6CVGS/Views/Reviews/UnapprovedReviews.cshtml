@model IEnumerable<Team6CVGS.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Unapproved Reviews</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewRaiting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameGu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (!item.Approved)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewRaiting)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameGu.EnglishName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.GivenName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ReviewId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ReviewId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ReviewId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
