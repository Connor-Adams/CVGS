@model IEnumerable<Team6CVGS.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed">
            <thead>
                <tr>
                    <th>
                        Item
                    </th>
                    <th>
                        Date Added
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="location.href = '@(Url.Action("Game", "Games", new { guid = item.Game.Guid, trailer = item.Game.EnglishTrailer } ))'">
                        <td>
                            @Html.DisplayFor(modelItem => item.Game.EnglishName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>

                        <td>
                            <a asp-action="Delete" asp-route-id="@item.ItemId">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
